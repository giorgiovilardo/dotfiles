Host github.com
  HostName github.com
  User git
  AddKeysToAgent yes
  {{ if eq .chezmoi.os "darwin" -}}
  UseKeychain yes
  {{ end -}}
  IdentityFile ~/.ssh/id_ed25519
  IdentitiesOnly yes

{{- if eq .context "work" }}

Host github.com-work
  HostName github.com
  User git
  AddKeysToAgent yes
  {{ if eq .chezmoi.os "darwin" -}}
  UseKeychain yes
  {{ end -}}
  IdentityFile ~/.ssh/id_ed25519_work
  IdentitiesOnly yes
{{- end -}}
